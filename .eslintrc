{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "extends": [
    "@nuxt/eslint-config"
  ],
  "rules": {
    "vue/component-name-in-template-casing": ["error", "PascalCase"],
    "semi": ["warn", "always"],
    "no-unused-vars": "warn",
    "indent": ["error", "tab"]
  },
  "globals": {
    "$nuxt": true
  },
}